{{>layout/header}}
<div class="container">
    <h1>게시글 수정</h1>
    <div class="col-md-12">
        <div class="col-md-4">
            <form>
                <div class="form-group">
                    <label for="id">글 번호</label>
                    <input type="text" class="form-control" id="id" value="{{post.id}}" readonly>
                </div>
                <div class="form-group">
                    <label for="title">제목</label>
                    <input type="text" class="form-control" id="title" value="{{post.title}}">
                </div>
                <div class="form-group">
                    <label for="author">작성자</label>
                    <input type="text" class="form-control" id="author" value="{{post.author}}" readonly>
                </div>
                <div class="form-group">
                    <label for="content">내용</label>
                    <textarea id="content"  class="form-control" placeholder="내용을 입력하세요.">{{post.content}}</textarea>
                </div>
                <div class="form-group">
                    <label for="author">산 이름</label>
                    <input type="text" class="form-control" id="climbing_mountain" placeholder="등산할 산을 입력하세요.">
                </div>
                <div class="form-group">
                    <label for="author">등산 날짜</label>
                    <input type="text" class="form-control" id="climbing_date" placeholder="등산할 날짜를 입력하세요.">
                </div>
                <div class="form-group">
                    <a href="/blogs" role="button" class="btn btn-secondary">취소</a>
                    <button id="btn-update" class="btn btn-primary" type="button">수정 완료</button>
                    <button id="btn-delete" class="btn btn-danger" type="button">삭제</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="/js/app/index.js"></script>
{{>layout/footer}}