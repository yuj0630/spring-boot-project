{{>layout/header}}
<div class="container">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-6">
                <a href="/posts/save" class="btn btn-primary">글 등록</a>
                <a href="/posts/update" class="btn btn-primary">글 수정</a>
            </div>
        </div>
        <!-- 게시글 리스트 -->
        <table class="table table-horizontal table-bordered">
            <thead class="thead-dark">
            <tr>
                <th scope="col">id</th>
                <th scope="col">제목</th>
                <th scope="col">작성번호</th>
                <th scope="col">산 코드</th>
                <th scope="col">내용</th>
                <th scope="col">작성일</th>
            </tr>
            </thead>
            <tbody id="tbody">
            {{#posts}}
                <tr>
                    <td>{{id}}</td>
                    <td><a href="/posts/{{id}}">{{title}}</a></td>
                    <td>{{hikerid}}</td>
                    <td>{{pmntnsn}}</td>
                    <td>{{content}}</td>
                    <td>{{postDate}}</td>
                </tr>
            {{/posts}}
            </tbody>
        </table>
    </div>
</div>
{{>layout/footer}}
