{{>layout/header}}
<div class="container">
    <div class="col-md-12">
        <div class="col-md-4">
            <form action="/api/v1/blogs" method="blogs">
                <div class="form-group">
                    <label for="title">제목</label>
                    <input type="text" class="form-control" id="title" placeholder="제목을 입력하세요.">
                </div>
                <div class="form-group">
                    <label for="author">작성자</label>
                    <input type="text" class="form-control" id="author" placeholder="작성자를 입력하세요.">
                </div>
                <div class="form-group">
                    <label for="content">내용</label>
                    <textarea id="content" class="form-control" placeholder="내용을 입력하세요."></textarea>
                </div>
                <div class="form-group">
                    <label for="author">산 이름</label>
                    <input type="text" class="form-control" id="climbing_mountain" placeholder="등산할 산을 입력하세요.">
                </div>
                <div class="form-group">
                    <label for="author">등산 날짜</label>
                    <input type="datetime-local" class="form-control" id="climbing_date" placeholder="등산할 날짜를 입력하세요.">
                </div>
                <div class="form-group">
                    <a href="/blogs" role="button" class="btn btn-secondary">취소</a>
                    <button id="btn-save" class="btn btn-primary" type="button">등록</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="/js/app/index.js"></script>
{{>layout/footer}}