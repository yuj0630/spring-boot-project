{{>layout/header}}
<div class="container">
    <h1>게시글 등록</h1>
    <div class="col-md-12">
        <div class="col-md-4">
            <form action="/api/v1/posts" method="post">
                <div class="form-group">
                    <label for="title">제목</label>
                    <input type="text" class="form-control" id="title" placeholder="제목을 입력하세요.">
                </div>
                <div class="form-group">
                    <label for="author">작성자</label>
                    <input type="text" class="form-control" id="author" placeholder="제목을 입력하세요.">
                </div>
                <div class="form-group"></div>
                    <label for="content">내용</label>
                    <textarea name="" id="content" class="form-control" placeholder="제목을 입력하세요."></textarea>
                <div class="form-group">
                    <a href="/" role="button" class="btn btn-secondary">취소</a>
                    <button id="btn-save" class="btn btn-primary" type="button">등록</button>
                </div>
            </form>
        </div>
    </div>
</div>
{{>layout/footer}}